#!/usr/bin/python
# -*- coding: utf-8 -*-
from .leftframe import LeftFrame
from .rightframe import RightFrame
from gui.utils import utils

import ttk
from Tkinter import *
from ttk import *


class ImageChecker(Tk):
    def __init__(self):
        Tk.__init__(self)
        self.geometry(utils.centerWindow(self, 950, 800))

        #these set default choice values for all boxes/menu choices
        #actual used values are read at "createjobs" button press
        #in leftframe.py
        self.numjobs = 0
        self.queue = "standard"
        self.wallclock = "24:00:00"
        self.cputime = "48:00:00"
        self.ppn = "3"
        self.command ="import detecttrails as dt;\n" +\
            "dt.DetectTrails($).process()\n"
        self.runs = ""
        self.savefolder = "~/Desktop"
        self.template = "~/Desktop/bitbucket/refactor/createjobs/generic"
        self.newtemplatesavepath = "~/Desktop"
        

        self.leftFrame = LeftFrame(self)
        self.rightFrame = RightFrame(self)
        
        self.title("Job Creator")
        

def run():
    app = ImageChecker()
    app.mainloop()